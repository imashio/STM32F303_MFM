{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "type": "shell", // added
    "echoCommand": true, // added
    "tasks": [
        {
            // setup makefile
            "taskName": "setup makefile",
            "command": "bash makefile_setting.sh",
            "problemMatcher": [
                "$bash"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },{
            // BUILD ALL
            "taskName": "make all",
            "command": "make all -j4",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },{
            // CLEAN
            "taskName":"make clean",
            "command": "make clean",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },{
            // RUN
            "taskName":"Run",
            //"command": "/usr/local/openocd/bin/openocd -f openocd.cfg -c \"flash_elf build/STM32F303_MFM.elf\"",
            "command": "make all; /usr/local/openocd/bin/openocd -f openocd.cfg -c \"flash_elf build/STM32F303_MFM.elf\"",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}